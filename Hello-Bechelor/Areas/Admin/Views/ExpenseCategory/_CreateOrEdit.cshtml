@model ExpenseCategory
<form id="create-form" method="post" asp-area="Admin" asp-action="OnPostAddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label"> Name</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Code</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Code"  class="form-control">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">Default Amount</label>
        <div class="col-md-9">
            <input autocomplete="off" asp-for="Amount" class="form-control">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
   
    
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
       
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>

@section Script{
    
    <script type="text/javascript">

        $(document).ready(function () {
            $('#dateTime').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0",
                bootstrap: 4
            });

        });
    </script>

}
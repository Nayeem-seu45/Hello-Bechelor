@model IEnumerable<ExpenseCategory>
<table class="table table-bordered" id="expenseTable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Code
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var expensecat in Model)
            {
        <tr>
            <td>
                @expensecat.Name
            </td>
            <td>
                @expensecat.Code
            </td>
           
            <td text-right">
                <a onclick="jQueryModalGet('/ExpenseCategory/CreateOrEdit&id=@expensecat.Id','Edit Expense')" class="btn btn-info text-white"> Edit</a>
                <form method="post" asp-page="Index" asp-route-id="@expensecat.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                    <button type="submit" class="btn btn-danger text-white"> Delete</button>
                </form>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#expenseTable").DataTable();
    });
</script>